{
  "name": "copy-dots",
  "version": "0.1.0",
  "description": "Quickly copy dot files (and more!) from another project into an existing project with a single command.",
  "author": "Owen Buckley <owen@thegreenhouse.io>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/thescientist13/copy-dots.git"
  },
  "keywords": [
    "dot files",
    "utility"
  ],
  "main": "src/index.js",
  "bin": {
    "copy-dots": "./src/index.js"
  },
    "files": [
    "src/"
  ],
  "scripts": {
    "develop": "export NODE_ENV=development && rimraf ./output && node .",
    "lint": "eslint \"*.js\" \"./src/**/*.js\" \"./test/**/**/*.js\"",
    "start": "npm run develop",
    "test": "export NODE_ENV=development && nyc mocha",
    "test:tdd": "export NODE_ENV=development && yarn test --watch"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "eslint": "^7.6.0",
    "fs-extra": "^9.0.1",
    "mocha": "^8.1.1",
    "nyc": "^15.1.0",
    "rimraf": "^3.0.2"
  }
}